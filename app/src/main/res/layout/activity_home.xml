<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/magnetic"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lbPinLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:text="@string/pin_percent"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/lbDeviceGen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:text="@string/gen"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/lbIdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:text="@string/idm"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@color/textColor" />
                <TextView
                    android:id="@+id/lbIds"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="@string/ids"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/txtUserInput"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="@string/user_input"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@color/textColor" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/textColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="----- PROCESS -----"
                android:textColor="@color/textColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textColor="@color/textColor" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>